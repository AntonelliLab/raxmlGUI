{
  "name": "raxmlgui2",
  "version": "0.2.0",
  "private": true,
  "author": "Captain Electron",
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "start": "cross-env ELECTRON_START_URL=http://localhost:3000/ run-p react-start electron-dev",
    "react-start": "cross-env BROWSER=none react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "wait-dev": "wait-on $ELECTRON_START_URL",
    "electron-start": "nodemon --watch src/electron src/electron.js .",
    "electron-dev": "cross-env DEV=true run-s wait-dev electron-start",
    "electron-build": "electron-builder",
    "electron-pack": "electron-builder --dir",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build"
  },
  "dependencies": {
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.2",
    "bionode-fasta": "^0.5.6",
    "bionode-seq": "^0.1.1",
    "classnames": "^2.2.5",
    "cpus": "^1.0.2",
    "d3-array": "^2.0.3",
    "d3-format": "^1.3.2",
    "electron-is-dev": "^1.0.1",
    "lodash": "^4.17.11",
    "mobx": "^5.9.0",
    "mobx-react": "^5.4.3",
    "parse-filepath": "^1.0.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-dropzone": "^10.0.4",
    "react-msa-viewer": "^1.0.1",
    "react-scripts": "2.1.8"
  },
  "devDependencies": {
    "cross-env": "^5.1.3",
    "electron": "^4.1.0",
    "electron-builder": "^20.39.0",
    "electron-devtools-installer": "^2.2.4",
    "nodemon": "^1.14.11",
    "npm-run-all": "^4.1.2",
    "typescript": "^3.3.3333",
    "wait-on": "^3.2.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "build": {
    "appId": "org.jtklein.raxmlGUI2",
    "productName": "raxmlGUI2",
    "files": [
      "src/electron/*"
    ],
    "extraResources": [
      "assets/"
    ],
    "mac": {
      "category": "public.app-category.education",
      "extraFiles": [
        {
          "from": "bin/raxml",
          "to": "bin",
          "filter": [
            "**/*-Mac"
          ]
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "extraFiles": [
        {
          "from": "bin/raxml",
          "to": "bin",
          "filter": [
            "**/*-Windows.exe"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ],
      "category": "Education",
      "extraFiles": [
        {
          "from": "bin/raxml",
          "to": "bin",
          "filter": [
            "**/*-Linux"
          ]
        }
      ]
    }
  }
}
